<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.haier.cellarette.baselibrary.widget.RingProgressBar
        android:id="@+id/progress_bar_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        app:max="100"
        app:progress="35"
        app:ringColor="@color/colorPrimary"
        app:ringProgressColor="@color/colorPrimaryDark"
        app:ringWidth="3dp"
        app:style="FILL"
        app:textColor="@color/colorPrimary"
        app:textIsShow="true"
        app:textSize="16sp" />


    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:background="#FFE04832"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text="播放音频"
                android:textColor="#028DF9"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.haier.cellarette.baselibrary.widget.RingProgressBar
                android:id="@+id/progress_bar_2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:max="100"
                app:progress="20"
                app:ringColor="#F0F0F0"
                app:ringProgressColor="#028DF9"
                app:ringWidth="10dp"
                app:style="STROKE"
                app:textColor="@color/colorPrimary"
                app:textIsShow="false"
                app:textSize="16sp" />

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:background="@drawable/bg_circle2"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/lb_ic_play" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>